<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.notification.NotificationController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-font-family: Arial;">
    
    <!-- Title -->
    <Label text="Notifications" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Notification List -->
    <ListView fx:id="notificationList" prefWidth="300" prefHeight="400"/>

    <!-- Button Controls -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Mark as Read" onAction="#handleMarkAsRead"/>
        <Button text="Clear Selected" onAction="#handleClearSelected"/>
    </HBox>
</VBox>